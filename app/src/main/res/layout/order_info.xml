<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:visibility="gone"
        android:id="@+id/time"
        android:paddingTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="left"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"/>
    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:padding="10dp"
        android:layout_toRightOf="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingBottom="1dp">
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/time"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <demo.notification.com.notification.ImageTextButton
            android:id="@+id/subtitle"
            android:background="@drawable/blackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:drawablePadding="5dp"
            app:drawableWidth="10dp"
            app:drawableHeight="10dp"
            android:text="MYMAIL"
            android:padding="5dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
          />
            <TextView
                android:id="@+id/title"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:background="@drawable/blackgroundb"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="Even if the road is not flat also should make oneself of the sun."
                android:layout_height="wrap_content" />

    </LinearLayout>
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:text="删除"
            android:textColor="@android:color/white"/>
    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>


</RelativeLayout>